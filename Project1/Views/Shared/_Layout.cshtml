<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Project1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://kit.fontawesome.com/fcc604771a.js" crossorigin="anonymous"></script>
    <style>
        body {
            font-family: monospace;
        }

        a {
            color: black;
            text-decoration: none;
        }
    </style>

</head>
<body>
    <header>
        <nav class="navbar bg-light">
            <div class="container-fluid">
                <div class=".flex-row">
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index">Mr. Computer</a>
                    <a asp-controller="Home" asp-action="Index" class="m-3">Home</a>
                    <a asp-controller="Home" asp-action="About" class="m-3">About</a>
                    <a asp-controller="Home" asp-action="ContactUs" class="m-3">Contact Us</a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!--FOOTER-->
    <div class="container">
        <footer class="py-3 my-4">
            <ul class="nav justify-content-center border-bottom pb-3 mb-3">
                <li class="nav-item"><a asp-controller="Home" asp-action="Index" class="nav-link px-2 text-muted m-2">Home</a></li>
                <li class="nav-item"><a asp-controller="Home" asp-action="About" class="nav-link px-2 text-muted m-2">About</a></li>
                <li class="nav-item"><a asp-controller="Home" asp-action="ContactUs" class="nav-link px-2 text-muted m-2">Contact Us</a></li>
            </ul>
            <p class="text-center text-muted">&copy; 2023 Mr. Computer</p>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
