@{
}
@model List<Product>
<table class="table table-striped font-weight-bold">
    <thead>
    <th>ID</th>
    <th>Product Name</th>
    <th> Price</th>
    <th>Product Img</th>
    <th>Delete</th>
    <th>Edit</th>
    </thead>
    @foreach (var c in Model)
    {
        <tr class="m-3">
            <td>@c.ProductId</td>
            <td>@c.ProductName</td>
            <td>@c.ProducrPrise</td>

            <td>    <img src="../../images/@c.ProductDescription" style="height: 100px; width:8rem;" class="card-img-top" alt="electronic_device"></td>
            <td><a asp-controller="Category" asp-action="DeleteProduct" asp-route-id="@c.ProductId">Delete</a></td>
            <td><a asp-controller="Product" asp-action="Edit" asp-route-id="@c.ProductId">Edit</a></td>
         
        </tr>
    }

</table>

<a asp-controller="Login" asp-action="BackToCategory" class="btn btn-primary"> Back To Category</a>


